.admin {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

    .admin-left {
        flex: 1;
        text-align: center;

        img {
            height: 500px;
        }
    }

    .admin-right {
        flex: 1;
        color: #409EFF;

        p {
            color: #222;
            font-size: 20px;
            line-height: 24px;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .admin-right-tips {
            color: #409eff;
            font-size: 14px;
            cursor: pointer;
            font-weight: 100;
            width: 70px;
        }

        span {
            font-size: 13px;
            line-height: 21px;
            color: grey;
            margin-bottom: 30px;
        }
    }
}