.waterfall{
    column-count: 6;
    column-gap: 0;
    .item{
        box-sizing: border-box;
        break-inside: avoid;
        padding: 10px;
        width :222px;
        .item-content{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 10px;
            height: auto;
            font-size: 20px;
            color: #686868;
            box-sizing: border-box;
            border: 1px solid #ccc;
            img{
                width:100%;
            }
        }
    }
}